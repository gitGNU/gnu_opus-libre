; macros used in lyric mode.

(define dash
#{
  \once \override LyricHyphen #'minimum-distance = #4
  \once \override LyricHyphen #'length = #2
  \once \override LyricHyphen #'thickness = #1.2
#})

(define leftSyl
#{
  \once \override LyricText #'self-alignment-X = #0.9
#})

(define rightSyl
#{
  \once \override LyricText #'self-alignment-X = #-0.9
#})
